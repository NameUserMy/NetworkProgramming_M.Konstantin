<UserControl x:Class="NetworkProgramming_multiCast.View.Message.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkProgramming_multiCast.View.Message"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="All message" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        <ListView Grid.Row="1"  x:Name="mesaggeList" ItemsSource="{Binding Message}" ></ListView>
    </Grid>
</UserControl>
