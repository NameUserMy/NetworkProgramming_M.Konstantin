<Window x:Class="NetworkProgramming_multiCast.View.StartView.MainStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgramming_multiCast.View.StartView"
        mc:Ignorable="d"
        Title="MainStart" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ContentControl Margin="3,3,3,3" x:Name="sendMessage" Grid.Row="2" Grid.Column="1" ></ContentControl>
        <ContentControl Margin="3,3,3,3" x:Name="online" Grid.RowSpan="3" Grid.Column="0"></ContentControl>
        <ContentControl Margin="3,3,3,1" x:Name="message" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"></ContentControl>
    </Grid>
</Window>
